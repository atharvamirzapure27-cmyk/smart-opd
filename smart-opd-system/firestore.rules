rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow get: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow list: if request.auth != null && isAdmin(request.auth.uid);
      allow update: if request.auth != null && (
        (request.auth.uid == userId && request.resource.data.role == resource.data.role)
        || isAdmin(request.auth.uid)
      );
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Appointments collection
    match /appointments/{appointmentId} {
      allow create: if request.auth != null && (
        request.resource.data.patientId == request.auth.uid
        || isAdmin(request.auth.uid)
      ) && validAppointment(request.resource.data);

      allow get: if request.auth != null && (
        request.auth.uid == resource.data.patientId
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == resource.data.doctorEmail
        || isAdmin(request.auth.uid)
      );

      // allow listing for authenticated users (clients should filter queries).
      allow list: if request.auth != null;

      allow update: if request.auth != null && (
        isAdmin(request.auth.uid)
        || (request.auth.uid == resource.data.patientId && onlyPatientUpdates(resource.data, request.resource.data))
        || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == resource.data.doctorEmail && onlyStatusChanged(resource.data, request.resource.data))
      );

      allow delete: if request.auth != null && (isAdmin(request.auth.uid) || request.auth.uid == resource.data.patientId);
    }

    // Helpers
    function isAdmin(uid) {
      return uid != null && get(/databases/$(database)/documents/users/$(uid)).data.role == 'admin';
    }

    function validAppointment(data) {
      return data.patientId is string
        && data.patientEmail is string
        && data.doctorEmail is string
        && data.opd is string
        && data.time is string
        && (data.token is int || data.token is float)
        && data.status in ['waiting', 'consulting', 'completed'];
    }

    function onlyPatientUpdates(oldData, newData) {
      return oldData.patientId == newData.patientId
        && oldData.doctorEmail == newData.doctorEmail
        && oldData.token == newData.token
        && oldData.createdAt == newData.createdAt
        && (oldData.status == newData.status || newData.status == 'waiting');
    }

    function onlyStatusChanged(oldData, newData) {
      return oldData.patientId == newData.patientId
        && oldData.doctorEmail == newData.doctorEmail
        && oldData.token == newData.token
        && oldData.createdAt == newData.createdAt
        && oldData.patientEmail == newData.patientEmail
        && (oldData.status != newData.status);
    }

  }
}
